<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextInputLayoutHint">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="myToolbarTheme"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/text_color_primary</item>
        <item name="android:editTextColor">@color/text_color_sub</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionBarWidgetTheme">@style/searchViewTheme</item>
        <!-- your other custom styles -->
    </style>

    <style name="searchViewTheme">
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="Theme.MyTheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">@color/text_color_primary</item>
        <item name="android:editTextColor">@color/text_color_sub</item>
        <!-- your other custom widget styles -->
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="small_rating" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:minHeight">12dp</item>
        <item name="android:minWidth">12dp</item>
    </style>

    <style name="general_rating" parent="Widget.MaterialRatingBar.RatingBar">
    <item name="android:minHeight">24dp</item>
    <item name="android:minWidth">24dp</item>
</style>

    <style name="general_big_rating" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="large_rating" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="xlarge_rating" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">60dp</item>
    </style>

</resources>
